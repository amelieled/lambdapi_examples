// Disjunction
// Definition or b1 b2 :=
//   match b1 with
//   | true => true
//   | false => b2
//   end.
symbol or : ð”¹ â†’ ð”¹ â†’ ð”¹
set infix left 6 "|" â‰” or
rule true | _  â†ª true
 and _  | true â†ª true
 and false | &b â†ª &b
 and &b | false â†ª &b

// Conjunction
// Definition andb b1 b2 :=
//  match b1 with
//  | true => b2
//  | false => false
//  end.
symbol andb : ð”¹ â†’ ð”¹ â†’ ð”¹
//set infix left 5 "^" â‰” {|and|}
rule andb true  &b    â†ª &b
 and andb &b    true  â†ª &b
 and andb false _     â†ª false
 and andb _     false â†ª false

